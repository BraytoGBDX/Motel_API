extends ../layout/index
block content

    div.py-10
        h1.text-center.text-4xl.my-10.font-extrabold.text-black Real
            span.font-normal.text-black Estate
        h2.text-center.text-3xl.font-extrabold= page

        if errors
            div#message.mt-8.mx-auto.max-w-xl
                div(class="p-4 bg-indigo-800 items-center text-indigo-100 leading-none lg:rounded-full flex lg:inline-flex" role="alert")
                    span(class="flex rounded-full bg-indigo-500 uppercase px-4 py-2 text-sm font-bold mr-4") Danger
                    div(class="font-semibold mr-4 text-left flex-auto")
                        each error in errors
                            p(class="mb-2 mt-3 text-white")= error.msg
        .mt-8.mx-auto.max-w-xl
            .bg-white.py-8.px-4.shadow-x1.rounded-lg.shadow-2xl
                form.space-y-5(action="/user/register" method="POST" noValidate)
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for= "name") Name:
                        input#name.w-full.px-3.py-3.py-2.border.border-gray-300.rounded-sm.placeholder-gray-400(placeholder="Full Name" name="name" value=user && user.name ? user.name : '')
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for= "email") Email:
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-sm.placeholder-gray-400(placeholder="user@domain.com" name="email" type="email" value=user && user.email ? user.email : '')

                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for= "password") Password:
                        input#password.w-full.px-3.py-3.py-2.border.border-gray-300.rounded-sm.placeholder-gray-400(placeholder="Enter your password" name="password" type="password" required)
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for= "repeatPassword" type="password") Repeat password:
                        input#confirmPassword.w-full.px-3.py-3.py-2.border.border-gray-300.rounded-sm.placeholder-gray-400(placeholder="Reenter password" name="confirmPassword" type="password")

                    input#btn-login.w-full.bg-cyan-500.text-white(class="text-gray-800 font-bold py-3 cursor-pointer bg-blue-600 rounded-xl hover:bg-emerald-500 hover:text-white" type="submit" value="Register" required)

                    div.flex.items-center.justify-between.pt-5
                        a.text-sm.text-gray-800(href="/login/" class="hover:underline decoration-4 decoration-sky-600 ") Do you have an account? Login
                        a.text-sm.text-gray-800(href="/login/password-recovery" class="hover:underline decoration-4 decoration-sky-600 ") Forgot your password? Recover it
