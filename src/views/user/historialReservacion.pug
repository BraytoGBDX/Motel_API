extends ../layout/index

block styles  
    style.
        #myTable_info, #myTable_paginate {
        font-size: 0.75rem;  // Ajusta el tamaño de letra según tus preferencias
        }
        .dataTables_filter input {
             font-size: 0.75rem;  // Ajusta el tamaño de letra del campo de búsqueda
            }

block content 
    nav(class="bg-amber-500 border p-2 font-extrabolder h-30 text-xl")
        p#msg.text-white.text-center.py-10 Bienvenido #{loggedUser.name} 

    .bg-white.shadow.py-8.px-4.rounded-xl.mx-auto.max-w-full.my-10.text-center.font-extrabold.space-y-5(class="md:px-10 text-lg") 
        p Historial de Reservaciones

        if historialReservaciones && historialReservaciones.length
          div(class="bg-white shadow rounded-lg")
            div(class="divide-y divide-gray-200")
              each reservacion in historialReservaciones
                li
                  div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 gap-4")
                    div(class="sm:w-2/3 md:w-3/4 lg:w-5/6")
                      p(class="text-sm text-black font-bold")= `Fecha: ${reservacion.fecha.toLocaleDateString()}, Hora: ${reservacion.hora}, Tipo: ${reservacion.tipoReserva}, Habitacion: ${reservacion.room_ID}`
        else    
          p.text-center No hay reservaciones.
