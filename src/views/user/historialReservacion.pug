extends ../layout/index

block content
    h2(class="text-2xl font-bold mb-4 text-center").mt-5 Reservación de Habitación
    div(class="container mx-auto my-8 bg-white py-4 px-4 shadow-xl rounded-lg").w-96
      form(action="/user/reservacion", method="post", class="mx-auto max-w-md")
        div
          label(class="block text-gray-700 text-sm font-bold mb-2") Tipo de Habitación
          select(name="tipoHabitacion", class="block w-full px-4 py-2 border rounded-md bg-white focus:outline-none focus:ring focus:border-blue-300")
            option(value="Estandar") Estandar
            option(value="Suit") Suit
        div
          label(class="block text-gray-700 text-sm font-bold mb-2") Tipo de Reserva
          select(name="tipoReserva", class="block w-full px-4 py-2 border rounded-md bg-white focus:outline-none focus:ring focus:border-blue-300")
            option(value="publica") Pública
            option(value="anonima") Anónima
        div
          label(class="block text-gray-700 text-sm font-bold mb-2") Fecha
          input(type="date", name="fecha", class="block w-full px-4 py-2 border rounded-md bg-white focus:outline-none focus:ring focus:border-blue-300")
        div
          label(class="block text-gray-700 text-sm font-bold mb-2") Hora
          input(type="time", name="hora", class="block w-full px-4 py-2 border rounded-md bg-white focus:outline-none focus:ring focus:border-blue-300")
        button(type="submit", class="bg-blue-500 text-white px-4 py-2 rounded-md mt-4") Realizar Reserva
