extends ../layout/index 
block content 
    div.py-10 
        h1.text-center.text-4xl.my-10.font-extrabold(class="text-black-700") Motel 
            span.font-normal.text-black Dos 
            span.text-center.text-4xl.my-10.font-extrabold(class="text-black-700") Caminos 
        h2.text-center.text-3xl.font-extrabold= page
        br
        br
        div.bg-white.shadow.py-8.px-4.border-lg.max-w-md.mx-auto.rounded-xl
            p.text-xl.text-bold.text-center.my-10.text-white.uppercase.py-5.rounded-xl(class=(error ? "bg-red-500" : "bg-green-500"))= msg
                 div.flex.items-center.justify-between.pt-5
                    if button == "Volver al inicio" 
                        a(href="/user/userHome").w-full.bg-orange-500.uppercase.text-white.text-center(class="text-gray-800 font-bold py-3 px-5 cursor-pointer bg-yellow-700 rounded-xl hover:bg-yellow-500 hover:text-white ") #{button}
                    else if button == "Volver a Mis reservas"
                        a(href="/user/historial").w-full.bg-orange-500.uppercase.text-white.text-center(class="text-gray-800 font-bold py-3 px-5 cursor-pointer bg-yellow-700 rounded-xl hover:bg-yellow-500 hover:text-white ") #{button}
