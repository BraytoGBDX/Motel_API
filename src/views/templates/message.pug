extends ../layout/index

block content
    div.py-10
        h1.text-center.text-2xl.my-5.font-extrabold(class="text-black-700") Motel
            span.font-normal.text-black Dos
            span.text-center.text-2xl.my-5.font-extrabold(class="text-black-700") Caminos
        h2.text-center.text-xl.font-extrabold= page
    if type=== "error"
        .message-container.flex.justify-center(style="width: 300px; margin: 0 auto;")
            #alert-additional-content-2(class="p-4 mb-4 text-red-800 w-96 border border-red-300 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 dark:border-red-800" role="alert")
                .flex.items-center
                    svg(class="flex-shrink-0 w-4 h-4 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20")
                        path(d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z")
                    span(class="sr-only") Info
                    h3(class="text-lg font-medium")= page
                div(class="mt-2 mb-2 text-sm")
                    | #{part1}
                    span(class="text-verdigris font-bold text-black")=message
                    | #{part2}
                .flex
                    a(href="/login")
                        button(type="button" class="text-white bg-red-800 hover:bg-red-900 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-md text-xs px-2 py-1 mr-1 text-center inline-flex items-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800") Back to login!!
    if type=== "success"
        .message-container.flex.justify-center(style="width: 300px; margin: 0 auto;")
            #alert-additional-content-3(class="p-4 mb-4 text-green-800 w-96 border border-green-300 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400 dark:border-green-800" role="alert")
                .flex.items-center
                    svg(class="flex-shrink-0 w-4 h-4 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20")
                        path(d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z")
                    span(class="sr-only text-center") Info
                    h3(class="text-lg font-medium text-center")= page
                div(class="mt-2 mb-2 text-sm text-center")
                    | We have sent an email to:
                    span(class="text-verdigris font-bold text-white")=message
                    | , Please verify your account
                .flex
                    a(href="/login")
                        button(type="button" class="text-green-800 text-center bg-transparent border border-green-800 hover:bg-green-900 hover:text-white focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-md text-xs px-2 py-1 text-center dark:hover:bg-green-600 dark:border-green-600 dark:text-green-400 dark:hover:text-white dark:focus:ring-green-800") Back to login!!
    if type=== "warning"
        .message-container.flex.justify-center(style="width: 300px; margin: 0 auto;")
            #alert-additional-content-3(class="p-4 mb-4 text-green-800 w-96 border border-green-300 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400 dark:border-green-800" role="alert")
                .flex.items-center
                    svg(class="flex-shrink-0 w-4 h-4 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20")
                        path(d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z")
                    span(class="sr-only") Info
                    h3(class="text-lg font-medium")= page
                div(class="mt-2 mb-2 text-sm")
                    | We have sent an email to:
                    span(class="text-verdigris font-bold text-white")=message
                    | , Please verify your account
                .flex
                    a(href="/user/login")
                        button(type="button" class="text-green-800 bg-transparent border border-green-800 hover:bg-green-900 hover:text-white focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-md text-xs px-2 py-1 text-center dark:hover:bg-green-600 dark:border-green-600 dark:text-green-400 dark:hover:text-white dark:focus:ring-green-800") Back to login!!
